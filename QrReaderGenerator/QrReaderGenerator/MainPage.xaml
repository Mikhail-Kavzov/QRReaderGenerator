<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QrReaderGenerator.MainPage">

    <StackLayout>
        <StackLayout>
            <Button x:Name="PickerFileBtn" Text="Choose a file" Clicked="PickerFileBtn_Clicked"></Button>
            <Label x:Name="QREnterlbl">Enter text:</Label>
            <Entry x:Name="QREnterText"></Entry>
            <Button x:Name="GenerateBtn" Text="Generate" Clicked="GenerateBtn_Clicked"></Button>
        </StackLayout>
        <StackLayout>
            <Label x:Name="FileName"></Label>
            <Image x:Name="ImageFile"></Image>
            <zxing:ZXingScannerView x:Name="zxing" VerticalOptions="FillAndExpand"/>
            <Label x:Name="GenerationResultlbl"></Label>
        </StackLayout>
    </StackLayout>

</ContentPage>
